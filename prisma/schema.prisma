generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Notes {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  title    String
  note     String
  status   Status  @default(low)
  complete Boolean
  type     Type?
}

enum Status {
  low
  medium
  Hihgt
}

model Type {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  note     Notes  @relation(fields: [noteType], references: [id])
  noteType String @unique @db.ObjectId
}
